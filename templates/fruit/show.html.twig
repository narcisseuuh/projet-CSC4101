{% extends 'base.html.twig' %}
{% block title %}Affichage d'un Fruit{% endblock %}

{% block body %}
    <h1>Spécificités du Fruit</h1>


<table class="table">
    <tbody>
        <tr>
                <th>Id</th>
                <td>{{ fruit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fruit.nom }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ fruit.couleur }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ fruit.quantite }}</td>
            </tr>
            <tr>
                <th>Panier</th>
                <td>{{ fruit.panier.getNom }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ vich_uploader_asset(fruit, 'imageFile') }}"/></td>
            </tr>
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('app_fruit_index') }}">Retour à la liste des fruits</a>
<a class="btn btn-secondary" href="{{ path('app_fruit_edit', {'id': fruit.id}) }}">Modifier</a>
{{ include('fruit/_delete_form.html.twig') }}
{% endblock %}