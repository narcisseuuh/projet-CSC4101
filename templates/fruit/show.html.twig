{% extends 'base.html.twig' %}
{% block title %}Affichage d'un Fruit{% endblock %}

{% block body %}
    <h1>Spécificités du Fruit</h1>


<table class="table">
    <tbody>
        <tr>
                <th>Id</th>
                <td>{{ fruit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fruit.nom }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ fruit.couleur }}</td>
            </tr>
            <tr>
                <th>Quantité</th>
                <td>{{ fruit.quantite }}</td>
            </tr>
            <tr>
                <th>Panier</th>
                <td>{{ fruit.panier.getNom }}</td>
            </tr>


    </tbody>
</table>

<a href="{{ path('panier_show', { 'id': fruit.panier.id }) }}">retour au panier {{ fruit.panier.id }}</a>
{% endblock %}